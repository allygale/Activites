option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "tapalong.production_settings"
    PYTHONPATH: "/opt/python/current/app/tapalong:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "tapalong/tapalong/assets/"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "tapalong/tapalong/wsgi.py"
container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python tapalong/manage.py migrate tapalong_app --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python tapalong/manage.py collectstatic --noinput"